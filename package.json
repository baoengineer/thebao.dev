{
    "private": true,
    "sideEffects": false,
    "scripts": {
        "clean": "rimraf build public/build api",
        "dev:css": "postcss app/styles/index.css --dir public/styles -w",
        "build:css": "postcss app/styles/index.css --dir public/styles --env production",
        "dev": "concurrently \"npm run clean\" \"npm run dev:css\" \"remix dev\"",
        "build": "npm run clean && npm run build:css && remix build",
        "deploy": "npm run build && vercel --prod"
