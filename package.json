{
  "private": true,
  "sideEffects": false,
  "scripts": {
    "clean": "rimraf ./public/build \"./api\"",
    "build:fonts": "copyfiles -u 3 \"./app/assets/fonts/*\" ./public/build/_assets/fonts/",
    "preinstall": "npm run clean && npm run build:fonts",
    "prebuild": "npm run clean && npm run build:fonts",
    "build:css": "postcss app/styles/app.css --dir ./api/_css --env production",
    "build": "npm run build:css && npm run build:fonts && remix build",
    "dev:css": "postcss app/styles/app.css --dir ./api/_css -w",
    "dev": "concurrently \"npm run dev:css\" \"remix dev\""
  },
  "dependencies": {
    "@remix-run/node": "^1.7.0",
    "@remix-run/react": "^1.7.0",
    "@remix-run/vercel": "^1.7.0",
    "@vercel/node": "^2.4.4",
    "aos": "^3.0.0-beta.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.7.0",
    "@remix-run/eslint-config": "^1.7.0",
    "@remix-run/serve": "^1.7.0",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "autoprefixer": "^10.4.8",
    "concurrently": "^7.3.0",
    "copyfiles": "^2.4.1",
    "cssnano": "^5.1.13",
    "eslint": "^8.20.0",
    "postcss": "^8.4.16",
    "postcss-cli": "^10.0.0",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-import": "^15.0.0",
    "stylelint": "^14.11.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recommended": "^9.0.0",
    "tailwindcss": "^3.1.8",
    "typescript": "^4.7.4"
  },
  "engines": {
    "node": ">=14"
  }
}
